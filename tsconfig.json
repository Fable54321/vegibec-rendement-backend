{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./app",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}